<div id="timeline" class="container">
	<h1 class="page-header"><?php echo $t('timeline'); ?></h1>

	<div id="timeline-filters" class="pull-right">
		<form action="<?php echo Request::base($project->href('timeline'))?>" method="post">
			<fieldset>
				<legend><?php echo $t('filter_events')?></legend>
				<?php foreach (Traq\Models\Timeline::timelineFilters() as $filter => $filter_events): ?>
					<?php echo Form::checkbox("filters[{$filter}]", 1, array('checked' => in_array($filter, $filters)))?>
					<?php echo Form::label($t("timeline.filters.{$filter}"), "filters[{$filter}]")?><br />
				<?php endforeach; ?>
				<div class="actions">
					<?php echo Form::submit($t('apply_filters'), array('class' => 'btn btn-sm btn-default btn-block'))?>
				</div>
			</fieldset>
		</form>
	</div>

<?php foreach ($days as $day): ?>
	<h2><?php echo $l(settings('timeline_day_format'), $day['created_at']); ?></h2>

	<dl>
	<?php foreach ($day['activity'] as $event): ?>
		<dt class="timeline_event_<?php echo $event->id; ?>">
			<?php if (LOGGEDIN and $currentUser->permission($project->id, 'delete_timeline_events')): ?>
			<a class="btn btn-xs btn-danger" data-ajax-confirm="<?php echo $t('confirm.delete')?>" href="<?php echo Request::base($event->href('delete'))?>">
				<?php echo TWBS::fa('minus-circle'); ?><span class="sr-only"><?php echo $t('delete')?></span>
			</a>
			<?php endif; ?>
			<span class="text-muted time"><?php echo $l(settings('timeline_time_format'), $event->created_at); ?></span>

		<?php if (in_array($event->action, array('ticket_created','ticket_closed','ticket_reopened','ticket_updated'))): ?>
			<?php echo HTML::link(
				$t(
					"timeline.{$event->action}",
					array(
						'id'      => $event->ticket()->ticket_id,
						'summary' => $event->ticket()->summary,
						'type'    => $event->ticket()->type()->name,
						'status'  => $event->ticketStatus()->name
					)
				),
				$event->ticket()
			); ?>
		<?php elseif ($event->action == 'ticket_comment'): ?>
			<?php echo $t(
				'timeline.ticket_comment',
				array(
					'link' => HTML::link($event->ticket()->summary, $event->ticket()),
					'ticket_id' => $event->ticket()->ticket_id
				)
			); ?>
		<?php elseif (in_array($event->action, array('milestone_completed', 'milestone_cancelled'))): ?>
			<?php echo $t(
				"timeline.{$event->action}",
				array('name' => $event->milestone()->name)
			); ?>
		<?php elseif ($event->action == 'wiki_page_created' or $event->action == 'wiki_page_edited'): ?>
			<?php echo $t(
				"timeline.{$event->action}",
				array(
					'title' => HTML::link($event->wikiPage()->title, $event->wikiPage()),
					'slug' => $event->wikiPage()->slug
				)
			); ?>
		<?php endif; ?>
		</dt>
		<dd class="timeline_event_<?php echo $event->id; ?>">
			<span class="text-muted">
				<?php echo $t('timeline.by_x', array(HTML::link(Gravatar::withUsername($event->user(), 15), $event->user()))); ?>
			</span>
		</dd>
	<?php endforeach; ?>
	</dl>
<?php endforeach; ?>

	<?php echo View::render('Layouts/_pagination'); ?>
</div>
