<div class="plugins container">
	<h1 class="page-header"><?php echo $t('plugins'); ?></h1>

	<table class="table table-striped table-hover">
		<thead>
			<th class="name"><?php echo $t('name'); ?></th>
			<th class="author"><?php echo $t('author'); ?></th>
			<th class="version"><?php echo $t('version'); ?></th>
			<th class="actions"></th>
		</thead>
		<tbody>
		<?php foreach ($plugins as $plugin) { ?>
			<tr class="plugin-<?php echo $plugin['status']; ?>">
				<td><?php echo $plugin['name']; ?></td>
				<td><?php echo $plugin['author'] ? $plugin['author'] : ''; ?></td>
				<td><?php echo $plugin['version']; ?></td>
				<td>
					<?php if (!$plugin['installed']): ?>
						<?php echo HTML::link(
							TWBS::fa('plus', $t('install')), "/admin/plugins/{$plugin['directory']}/install",
							array('class' => 'btn btn-xs btn-success')
						); ?>
					<?php else: ?>
						<?php echo HTML::link(
							TWBS::fa('power-off', $t('uninstall')), "/admin/plugins/{$plugin['directory']}/uninstall",
							array('class' => 'btn btn-xs btn-danger')
						); ?>
						<?php if ($plugin['is_enabled']): ?>
							<?php echo HTML::link(
								TWBS::fa('minus', $t('disable')), "/admin/plugins/{$plugin['directory']}/disable",
								array('class' => 'btn btn-xs btn-warning')
							); ?>
						<?php else: ?>
							<?php echo HTML::link(
								TWBS::fa('check', $t('enable')), "/admin/plugins/{$plugin['directory']}/enable",
								array('class' => 'btn btn-xs btn-success')
							); ?>
						<?php endif; ?>
					<?php endif; ?>
				</td>
			</tr>
		<?php } ?>
		</tbody>
	</table>
</div>
